public class SortThreeElemArray {
	
	public static int[] sort(int[] a)
	{
		int Fpos = 0, SPos = a.length-1;
		int j, tmp;
		for(int i = 0; i < a.length; i++)
		{
			if(Fpos != SPos && SPos > Fpos)
			{
				if (a[i] == 2)
				{
					if(a[SPos] == 2)
					{
						for(j = SPos-1; j >= 0; j++)
						{
							if(a[SPos] != 2)
							{
								SPos = j;
								break;
							}
						}
					}
					tmp = a[SPos];
					a[SPos] = a[i];
					a[i] = tmp;
					
					SPos--;
				}
				else if (a[i] == 0)
				{
					tmp = a[Fpos];
					a[Fpos] = a[i];
					a[i] = tmp;
					
					Fpos++;
				}
			}
			else
				break;
		}
		return a;
	}
	
	public static void main(String[] args) {
		
		int[] a = {2,0,1,2,2,1,0,2};
		a = SortThreeElemArray.sort(a);
		for(int i =0; i < a.length; i++)
			System.out.print(a[i]);
	}

}
